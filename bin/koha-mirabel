#!/usr/bin/perl


package Main;
use Modern::Perl;
use Koha::Contrib::Mirabel;
use Getopt::Long;


binmode(STDOUT, ':encoding(utf8)');

my ($doit, $verbose) = (0, 0, 1);
GetOptions( 
    'doit'     => \$doit,
    'verbose!' => \$verbose,
);

my $mirabel = Koha::Mirabel->new( verbose => $verbose, doit => $doit );

for (@ARGV) {
    $mirabel->sync() if /sync/;
    $mirabel->clean() if /clean/;
}

